#!/usr/bin/env bash

usage(){
cat <<EOS
Usage:
   IN: echo unkoMoriMori | ${0##*/}
  OUT: unko_mori_mori
EOS

exit 0

}

main(){
  ARGS=($(cat -));

  STR=${ARGS[0]}

  if [ -z "${STR}" ] ;then

    usage

  fi

  echo "${STR}"  | ruby -F'(?=[A-Z])' -anle 'puts $F.map(&:downcase).join("_")'

}

[ -p /dev/stdin ] && cat - | main
[ -p /dev/stdin ] || usage
