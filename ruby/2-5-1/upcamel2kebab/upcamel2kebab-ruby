#!/usr/bin/env bash

usage(){
cat <<EOS
Usage:
   IN: echo UnkoMoriMori | ${0##*/}
  OUT: unko-mori-mori
EOS

exit 0

}

main(){
  ARGS=($(cat -));

  STR=${ARGS[0]}

  if [ -z "${STR}" ] ;then

    usage

  fi

  echo "${STR}" | ruby -F'(?=[A-Z])' -anle 'print $F.map(&:downcase).join("-")'

}

[ -p /dev/stdin ] && cat - | main
[ -p /dev/stdin ] || usage
