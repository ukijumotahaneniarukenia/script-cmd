#!/usr/bin/env bash

usage(){
cat <<EOS
Usage:
   IN: echo UnkoMoriMori | ${0##*/}
  OUT: UNKO_MORI_MORI
EOS

exit 0

}

main(){
  ARGS=($(cat -));

  STR=${ARGS[0]}

  if [ -z "${STR}" ] ;then

    usage

  fi

  echo "${STR}" | ruby -F'(?=[A-Z])' -anle 'print $F.map(&:upcase).join("_")'

}

[ -p /dev/stdin ] && cat - | main
[ -p /dev/stdin ] || usage
